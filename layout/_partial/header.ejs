<header class="top-header" id="header">
    <div class="flex-row">
        <div class="top-menu" id="top-menu">
            <a href="javascript:;" class="header-icon waves-effect waves-circle waves-light on" id="menu-toggle">
            <i class="icon icon-lg icon-navicon"></i>
            </a>
            <%
            var menuItem, isActive = function(item) {
                var pageUrl = url_for(page.path)
                return item.url === '/' ? pageUrl === url_for(item.url + 'index.html') : _.startsWith(pageUrl, url_for(item.url))
            };
            for (var i in theme.menu) {
                menuItem = theme.menu[i];
            %>
                <a href="<%- url_for(menuItem.url) %>" class="header-icon waves-effect waves-circle waves-light on">
                    <i class="icon icon-lg icon-<%= i %>"></i>
                </a>
            <% } %>
        </div>
        <span class="flex-col header-title ellipsis hidden" id="header-title"><%=title %></span>
        <% if(theme.search){ %>
        <div class="search-wrap" id="search-wrap">
            <a href="javascript:;" class="header-icon waves-effect waves-circle waves-light" id="back">
                <i class="icon icon-lg icon-chevron-left"></i>
            </a>
            <input type="text" id="key" class="search-input" autocomplete="off" placeholder="<%= __('global.search_input_hint') %>">
            <a href="javascript:;" class="header-icon waves-effect waves-circle waves-light" id="search">
                <i class="icon icon-lg icon-search"></i>
            </a>
        </div>
        <% }%>
        <% if(theme.share){ %>
        <a href="javascript:;" class="header-icon waves-effect waves-circle waves-light" id="menuShare">
            <i class="icon icon-lg icon-share-alt"></i>
        </a>
        <% } %>
    </div>
</header>
<header class="content-header <%-hdClass %>">

    <div class="container fade-scale">
        <h1 class="title"><%=title %></h1>
        <h5 class="subtitle">
            <% if(is_post()){ %>
                <%- partial('post/head-meta') %>
            <% } else if(is_home()){ %>
                <%- config.subtitle %>
            <% } else if (page.layout === 'page') {%>

                <%- page.discription?page.discription:config.subtitle %>
            <% } %>
        </h5>
    </div>

    <%- partial('tags-bar', {
        type: hdClass.split('-')[0]
    }) %>

</header>
