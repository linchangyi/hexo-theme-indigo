<script type="text/javascript">
    (function(){
        var storage = window.localStorage;
        if(storage.getItem('hide_menu')){
            var hide_menu = storage.getItem('hide_menu');
            if(hide_menu == 1){
                document.getElementById('top-menu').classList.add('enable');
            } else {
                document.getElementById('top-menu').classList.add('disable');
                document.getElementById('menu').classList.remove('hide');
            }
        } else {
            storage.setItem('hide_menu',<% if(theme.hideMenu) { %> 1 <% } else { %> 0 <% } %>);
        }
    })();
</script>

